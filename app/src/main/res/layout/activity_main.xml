<?xml version="1.0" encoding="utf-8"?>


<tools:LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.hoyoung.test.MainActivity">
<TextView android:id="@+id/mainTitle" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="눈길" android:textSize="40sp" android:gravity="center_horizontal"/>
<Button android:id="@+id/searchButton" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="길안내" android:textSize="24sp" android:layout_weight="2"/>
<Button android:id="@+id/memoManagementButton" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="메모 관리" android:textSize="24sp" android:layout_weight="2"/>
<Button android:id="@+id/arViewButton" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="증강뷰" android:textSize="24sp" android:layout_weight="2"/>
<Button android:id="@+id/meetingButton" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="모임" android:textSize="24sp" android:layout_weight="2"/>
</tools:LinearLayout>